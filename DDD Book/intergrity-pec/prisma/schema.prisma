generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Pec {
  id        String     @id @default(uuid())
  limit     Float
  piecesBuy PieceBuy[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PieceBuy {
  id        String @id @default(uuid())
  quantity  Int
  pieceName String
  price     Float
  value     Float

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Pec       Pec?     @relation(fields: [pecId], references: [id])
  pecId     String?
}

model ReserveEntitie {
  id String @id @default(uuid())
  entitieId String
  reservedAt DateTime @default(now())
  entitieName String
}
